            <th class="border border-black" colspan="2">Action</th>
           
        </tr>
        <!-- table data row -->
        
        <% results.forEach(index=>{ %>


            <tr > 
                <td class="border"><%=index.name%></td>
                <td class="border"><%=index.age%></td>
                <td class="border"><%=index.email%></td> 
         
                <td class="border"><a href="/delete/<%=index.id%>"><button>DELETE üóë</button></a></td>
                <td class="border border-black"><a href="/edit/<%=index.id%>"><button>UPDATE ‚úè</button></a></td>
                
            </tr>
       <% })%>
    
     
        
      </table>
</body>
</html>